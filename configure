#!/bin/sh

usage()
{
    echo "Use environment variables to pass values:
  CC          - compiler (default: cc)
  CFLAGS      - flags for compiler
  LDFLAGS     - flags for linker
  CONFIG_PATH - path to config.json (default: ../config.json)
  TOKEN       - your bot's token (required)"
    exit 1
}

while test $# -gt 0; do
    case "$1" in
        -h) usage
            ;;
        --help) usage
            ;;
    esac
    shift
done

CC=${CC:-cc}
CFLAGS=${CFLAGS:-}
LDFLAGS=${LDFLAGS:-}
CONFIG_PATH=${CONFIG_PATH:-../config.json}
if [ -z $TOKEN ]; then
    echo "TOKEN must be set"
    exit 1
fi

echo "Configuration:
  Compiler: $CC
  Compiler flags: $CFLAGS
  Linker flags: $LDFLAGS
  Config path: $CONFIG_PATH
  Token: [HIDDEN]"

# Create config for make
echo "CC = $CC
CFLAGS = $CFLAGS
LDFLAGS = $LDFLAGS" > include/config.mk

# Create config for code
echo "#ifndef __CONFIG_H__
#define __CONFIG_H__

#define CONFIG_PATH \"$CONFIG_PATH\"

#endif /* __CONFIG_H__ */" > include/config.h

# Create config for boy
echo "{
    \"logging\":
    {
        \"level\": \"info\",
        \"filename\": \"bot.log\",
        \"quiet\": false,
        \"overwrite\": true,
        \"use_color\": true,
        \"disable_modules\": [\"WEBSOCKETS\", \"USER_AGENT\"]
    },
    \"discord\":
    {
        \"token\": \"$TOKEN\"
    }
}" > $CONFIG_PATH
